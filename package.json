{
    "name": "typescript-express-docker",
    "version": "1.0.0",
    "description": "This is a minimal initial Boilerplate code for start any nodejs based app.",
    "main": "./build/index.js",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "start": "npm run build && node build/index.js",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prepare": "husky install",
        "test": "mocha --exit --require ts-node/register test/**/*.spec.ts",
        "coverage": "nyc npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atk81/typescript-express-docker-template.git"
    },
    "keywords": [
        "express",
        "docker",
        "typescript",
        "nodejs",
        "template",
        "boilerplate",
        "starter"
    ],
    "author": "atk81",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atk81/typescript-express-docker-template/issues"
    },
    "homepage": "https://github.com/atk81/typescript-express-docker-template#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "17.0.21",
        "@typescript-eslint/eslint-plugin": "5.12.1",
        "@typescript-eslint/parser": "5.12.1",
        "chai": "^4.3.6",
        "eslint": "8.9.0",
        "faker": "^6.6.6",
        "husky": "^7.0.4",
        "mocha": "^9.2.1",
        "nodemon": "2.0.15",
        "nyc": "^15.1.0",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "sinon": "^13.0.1",
        "ts-node": "10.5.0",
        "typescript": "4.5.5"
    }
}
