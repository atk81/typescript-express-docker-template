{
    "name": "typescript-express-docker",
    "version": "1.0.0",
    "description": "This is a minimal initial Boilerplate code for start any nodejs based app.",
    "main": "./build/index.js",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start": "cross-env NODE_ENV=production npm run build && node dist/index.js",
        "start:dev": "nodemon src/index.ts",
        "dev-server": "NODE_ENV=development nodemon",
        "postinstall": "chmod +x ./scripts/dev.sh",
        "ts-node-server": "ts-node src/index.ts",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prepare": "husky install",
        "test": "mocha --exit --require ts-node/register test/**/*.spec.ts",
        "coverage": "nyc npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atk81/typescript-express-docker-template.git"
    },
    "keywords": [
        "express",
        "docker",
        "typescript",
        "nodejs",
        "template",
        "boilerplate",
        "starter"
    ],
    "author": "atk81",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atk81/typescript-express-docker-template/issues"
    },
    "homepage": "https://github.com/atk81/typescript-express-docker-template#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.0",
        "@types/express": "^4.17.13",
        "@types/ioredis": "^4.28.8",
        "@types/mocha": "^9.1.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "17.0.21",
        "@types/proxyquire": "^1.3.28",
        "@types/sinon": "^10.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/yamljs": "^0.2.31",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "cross-env": "^7.0.3",
        "eslint": "8.10.0",
        "faker": "^6.6.6",
        "husky": "^7.0.4",
        "mocha": "^9.2.1",
        "nodemon": "2.0.15",
        "nyc": "^15.1.0",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "sinon": "^13.0.1",
        "ts-node": "10.7.0",
        "typescript": "4.6.2"
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "ioredis": "^4.28.5",
        "json-refs": "^3.0.15",
        "mongoose": "^6.2.4",
        "morgan": "^1.10.0",
        "proxyquire": "^2.1.3",
        "swagger-ui-express": "^4.3.0",
        "winston": "^3.6.0",
        "winston-daily-rotate-file": "^4.6.1",
        "yamljs": "^0.3.0"
    }
}
